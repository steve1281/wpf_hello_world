<Window x:Class="Hello_World.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello_World"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="210,75,0,0" TextWrapping="Wrap" Text="Select a Radio Button below, press Display button" VerticalAlignment="Top"/>
        <RadioButton Name="HelloRadio"  Content="Hello" HorizontalAlignment="Left" Margin="200,189,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton Name="GoodByRadio" Content="GoodBye" HorizontalAlignment="Left" Margin="400,189,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.783,0.69"/>
        <Button Name="DisplayButton" Content="Display" HorizontalAlignment="Left" Margin="297,325,0,0" VerticalAlignment="Top" Click="DisplayButton_Click"/>
        <TextBlock Name="MessageTextBlock" HorizontalAlignment="Left" Margin="230,260,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Window>
